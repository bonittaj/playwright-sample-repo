  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.21",
    "allure-playwright": "^3.3.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "npx playwright test tests/ui",
    "test:allure": "npx playwright test tests/ui --reporter=line,allure-playwright && rm -rf allure-report && npx allure generate allure-results -o allure-report && npx allure open allure-report",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "allure:report": "npm run allure:generate && npm run allure:open"
  }
}
